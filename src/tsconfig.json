        "baseUrl": "./src",
        "outDir": "../dist",
        "sourceMap": true,
        "sourceRoot": "src",
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "esModuleInterop": true
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
